datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  amount    Float
  currency  String
  description String?
  category  String?
  type      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
