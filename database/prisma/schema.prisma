// database/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

model User {
  id          String        @id @default(cuid())
  email       String        @unique
  name        String?
  password    String        // hashed password (if using custom auth)
  currency    String?       @default("INR")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  transactions Transaction[]
  budgets     Budget[]
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  amount      Float
  currency    String   @default("INR")
  description String?
  merchant    String?
  category    String?
  type        String   // 'income' | 'expense'
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Budget {
  id        String   @id @default(cuid())
  userId    String
  category  String
  amount    Float
  month     DateTime // first day of month for the budget
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
