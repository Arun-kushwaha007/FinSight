generator client {
  provider = "prisma-client-js"
  output   = "../../apps/api/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  password     String
  currency     String?       @default("INR")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  budgets      Budget[]
  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  amount      Float
  currency    String   @default("INR")
  description String?
  merchant    String?
  category    String?
  type        String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Budget {
  id        String   @id @default(cuid())
  userId    String
  category  String
  amount    Float
  month     DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
